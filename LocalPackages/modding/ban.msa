*:/ban $ = >>>
    _assertperm('mod', 0)
    if(_contains('nerd.nu/appeal', $),
        runas(player(), /ban $)
    , #else:
        runas(player(), /ban $ 'nerd.nu/appeal')
    )
<<<

*:/unban $player = >>>
    _assertperm('mod', 0)
    runas(~op, /unban $player)
<<<

*:/rbban $p $ = >>>
    call_alias(concat('/lbrb ', $p))
    call_alias(concat('/ban ', $p, ' ', $))
<<<
