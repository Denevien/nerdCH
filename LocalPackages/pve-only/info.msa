# Allows for a player to get map information

*:'/map' [$] = >>>
	msg(color(GOLD).'Access various maps of our current revision here:')
	msg(color(YELLOW).'	carto: http://nerd.nu/maps/pve/')
	msg(color(YELLOW).'	live map: http://nerd.nu/maps/pve/live/')
	msg(color(YELLOW).'	daily snapshots (flat): http://nerd.nu/maps/pve/snapshots/flat/')
	msg(color(YELLOW).'	daily snapshots (isometric): http://nerd.nu/maps/pve/snapshots/isometric/')
<<<

*:/maps [$] = call_alias(concat('/map ', $))