/ci [$] = >>>
    assign(@player, if(equals($, ''), player(), $))
    assign(@a, array())
    foreach(range(36), @i,
        array_set(@a, string(@i), null))
    #armour
    foreach(range(100,104), @i,
        array_set(@a, string(@i), null))
    
    if(and(has_permission('nerdch.ci.self'), equals(@player, player())),
        set_pinv(@player, @a)
        msg(concat(color(gray), 'Your inventory has been cleared.')),
    #else:
        if(has_permission('nerdch.ci.all'),
            try(
                set_pinv(@player, @a)
                call_alias(concat('/mb Inventory of ', @player, ' cleared.')),
            @e,
                msg(concat(color(red), 'Player not online!'))),
        #else:
             msg(concat(color(red), 'You do not have permission to do that!'))))
<<<

